@model MVC_Demo.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Employee</h4>
    <hr />
    @using (Html.BeginForm("Delete", "Employee", new {id =  Model.ID }, FormMethod.Post))
    {
        <table>
            <tr>
                <td>@Html.DisplayNameFor(m => m.Name)</td>
                <td>@Html.DisplayFor(model => model.Name)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Country)</td>
                <td>@Html.DisplayFor(model => model.Country)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.City)</td>
                <td>@Html.DisplayFor(model => model.City)</td>
            </tr>
            <tr>
                <td>Department:</td>
                <td>
                    @Html.DropDownList("DepartmentID", new List<SelectListItem>{
               new SelectListItem {Text = "IT" ,Value ="1" },
                new SelectListItem {Text = "HR" ,Value ="2" } }
        , "Select Department")
                </td>
            </tr>
        </table>
        <input type="submit" value="Delete" />
    }
</div>
